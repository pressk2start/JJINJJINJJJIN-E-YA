USE_RISK_SCORE = True

# ê°€ì¤‘ì¹˜ (í•©ê³„ 100) - ğŸ”§ ì´ˆê¸°ê°’ ê³ ì • (ìë™í•™ìŠµ ë¦¬ì…‹)
SCORE_WEIGHTS = {
    "buy_ratio": 28,      # ë§¤ìˆ˜ë¹„ (í•µì‹¬)
    "spread": 15,         # ìŠ¤í”„ë ˆë“œ (ë‚®ì„ìˆ˜ë¡ ì¢‹ìŒ)
    "turn": 22,           # íšŒì „ìœ¨
    "imbalance": 18,      # ì˜¤ë”ë¶ ì„ë°¸ëŸ°ìŠ¤
    "fresh": 7,           # í‹± ì‹ ì„ ë„
    "volume_surge": 10,   # ê±°ë˜ëŸ‰ ê¸‰ì¦
}

def calc_orderbook_imbalance(ob):
    """
    1~3í˜¸ê°€ ê°€ì¤‘ í‰ê·  ì„ë°¸ëŸ°ìŠ¤ ê³„ì‚°
    - 1í˜¸ê°€ ê°€ì¤‘ì¹˜ 3, 2í˜¸ê°€ 2, 3í˜¸ê°€ 1
    - ë°˜í™˜ê°’: -1.0 ~ +1.0 (ì–‘ìˆ˜=ë§¤ìˆ˜ìš°ì„¸)
    """
    try:
        units = ob["raw"]["orderbook_units"][:3]
        bid_weighted = sum(u["bid_size"] * u["bid_price"] * (3-i) for i, u in enumerate(units))
        ask_weighted = sum(u["ask_size"] * u["ask_price"] * (3-i) for i, u in enumerate(units))
        total = bid_weighted + ask_weighted
        if total <= 0:
            return 0.0
        imbalance = (bid_weighted - ask_weighted) / total
        return max(-1.0, min(1.0, imbalance))
    except Exception:
        return 0.0

def _safe_float(x, default=0.0):
    """NaN/inf ë°©ì§€ìš© ì•ˆì „ ë³€í™˜"""
    try:
        if x is None:
            return default
        f = float(x)
        if math.isnan(f) or math.isinf(f):
            return default
        return f
    except Exception:
        return default

def calc_risk_score(buy_ratio, spread, turn, imbalance, fresh_ok, volume_surge):
    """
    ë¦¬ìŠ¤í¬ ìŠ¤ì½”ì–´ ê³„ì‚° (0~100+)
    - ë¹„ì„ í˜• ì •ê·œí™” (S-curve) + êµì°¨ í”¼ì²˜ ì‹œë„ˆì§€ ë³´ë„ˆìŠ¤
    - ì‹œê°„ëŒ€ë³„ ê°€ì¤‘ì¹˜ ì¡°ì •
    """
    # ğŸ”§ ì•ˆì „ íŒ¨ì¹˜: NaN/inf ë°©ì§€
    buy_ratio = _safe_float(buy_ratio, 0.5)
    spread = _safe_float(spread, 0.5)
    turn = _safe_float(turn, 0.01)
    imbalance = _safe_float(imbalance, 0.0)
    volume_surge = _safe_float(volume_surge, 1.0)

    # ğŸ”§ ì•ˆì „ íŒ¨ì¹˜: ë§¤ìˆ˜ë¹„ 100% ë¹„ì •ìƒê°’ í´ë¦¬í•‘ (í—ˆìˆ˜/ìŠ¤í‘¸í•‘ ë°©ì§€)
    if buy_ratio >= 0.999:
        buy_ratio = 0.98

    score = 0.0

    # === ë¹„ì„ í˜• ì •ê·œí™” (S-curve: ì¤‘ê°„ê°’ ë¶€ê·¼ì—ì„œ ë³€ë³„ë ¥ ê·¹ëŒ€í™”) ===
    def _sigmoid_norm(val, center, width):
        """S-curve ì •ê·œí™”: center ê¸°ì¤€ Â±widthì—ì„œ 0~1 ë§¤í•‘"""
        x = (val - center) / max(width, 0.001)
        return 1.0 / (1.0 + math.exp(-x * 4))  # ê¸°ìš¸ê¸° 4ë¡œ ì™„ë§Œí•œ S-curve

    # ë§¤ìˆ˜ë¹„: ì¤‘ì‹¬ 0.60, í­ 0.10 (0.50~0.70ì—ì„œ ë³€ë³„)
    buy_norm = _sigmoid_norm(buy_ratio, 0.60, 0.10)
    score += SCORE_WEIGHTS["buy_ratio"] * buy_norm

    # ìŠ¤í”„ë ˆë“œ: ë‚®ì„ìˆ˜ë¡ ì¢‹ìŒ (ì—­ë°©í–¥ S-curve)
    spread_norm = 1.0 - _sigmoid_norm(spread, 0.20, 0.15)
    score += SCORE_WEIGHTS["spread"] * spread_norm

    # íšŒì „ìœ¨: ì¤‘ì‹¬ 0.03, í­ 0.02
    turn_norm = _sigmoid_norm(turn, 0.03, 0.02)
    score += SCORE_WEIGHTS["turn"] * turn_norm

    # ì„ë°¸ëŸ°ìŠ¤: ì¤‘ì‹¬ 0.15, í­ 0.20
    imb_norm = _sigmoid_norm(imbalance, 0.15, 0.20)
    score += SCORE_WEIGHTS["imbalance"] * imb_norm

    # í‹± ì‹ ì„ ë„: bool â†’ 0 or 100
    score += SCORE_WEIGHTS["fresh"] * (1.0 if fresh_ok else 0.0)

    # ê±°ë˜ëŸ‰ ê¸‰ì¦: ì¤‘ì‹¬ 1.5, í­ 0.5
    surge_norm = _sigmoid_norm(volume_surge, 1.5, 0.5)
    score += SCORE_WEIGHTS["volume_surge"] * surge_norm

    # === êµì°¨ í”¼ì²˜ ì‹œë„ˆì§€ ë³´ë„ˆìŠ¤ (í•µì‹¬ ê°œì„ ) ===
    # ë§¤ìˆ˜ë¹„ + ì„ë°¸ëŸ°ìŠ¤ ë™ì‹œ ê°•ì„¸ â†’ ì§„ì§œ ìˆ˜ê¸‰ (ìµœëŒ€ +8ì )
    if buy_ratio >= 0.62 and imbalance >= 0.35:
        synergy_buy_imb = min(8.0, (buy_ratio - 0.55) * (imbalance - 0.10) * 200)
        score += synergy_buy_imb

    # ê°€ì† + íšŒì „ ë™ì‹œ ê°•ì„¸ â†’ í­ë°œì  ìœ ì… (ìµœëŒ€ +5ì )
    if volume_surge >= 1.5 and turn >= 0.03:
        synergy_flow = min(5.0, (volume_surge - 1.0) * turn * 100)
        score += synergy_flow

    # ìŠ¤í”„ë ˆë“œ ì¢ê³  + ì„ë°¸ëŸ°ìŠ¤ ê°•í•¨ â†’ ì§„ì… ìµœì  í™˜ê²½ (ìµœëŒ€ +4ì )
    if spread <= 0.15 and imbalance >= 0.40:
        score += min(4.0, (0.20 - spread) * imbalance * 100)

    # === ì‹œê°„ëŒ€ë³„ ê°€ì¤‘ì¹˜ ì¡°ì • (ì¥ì´ˆ/í™œì„±ì‹œê°„ ë³´ë„ˆìŠ¤) ===
    try:
        h = now_kst().hour
        if 9 <= h <= 10:      # ì¥ì´ˆ ê¸‰ë“± ë¹ˆë°œ â†’ +3ì 
            score += 3.0
        elif 14 <= h <= 16:   # ì˜¤í›„ í™œì„± â†’ +1ì 
            score += 1.0
        elif 0 <= h < 6:      # ì•¼ê°„ â†’ -2ì  (ë…¸ì´ì¦ˆ ë§ìŒ)
            score -= 2.0
    except Exception:
        pass

    return round(score, 1)

# =========================
# ğŸ§  ìë™ ê°€ì¤‘ì¹˜ í•™ìŠµ ì‹œìŠ¤í…œ
# =========================
