def rnd():
    return random.random()  # â† ì´ ì¤„ì´ 4ì¹¸(ìŠ¤í˜ì´ìŠ¤) ë“¤ì—¬ì“°ê¸° ë˜ì–´ì•¼ í•¨

def fmt6(x):
    """
    ìˆ«ìë¥¼ ë³´ê¸° ì¢‹ê²Œ í‘œì‹œ:
    - ì •ìˆ˜ëŠ” ì†Œìˆ˜ì  ì—†ì´
    - ì†Œìˆ˜ì ì´ ìˆëŠ” ê²½ìš° ìµœëŒ€ 6ìë¦¬ê¹Œì§€ í‘œì‹œ
    """
    if isinstance(x, (int, float)):
        if abs(x - int(x)) < 1e-6:
            return f"{int(x):,}"
        else:
            s = f"{x:,.6f}".rstrip('0').rstrip('.')
            return s
    return str(x)

